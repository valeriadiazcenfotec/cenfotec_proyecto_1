<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Panel de Administración</title>

  <!-- Fuentes / Iconos -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

  <!-- Estilos -->
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <!-- Hamburguesa responsive -->
  <input type="checkbox" id="sidebar-toggle">
  <label for="sidebar-toggle" class="hamburger"><i class='bx bx-menu'></i></label>

  <div class="admin-page">
    <!-- Sidebar -->
    <aside class="sidebar" id="responsive-sidebar">
      <ul>
        <li><a href="#resumen">Resumen</a></li>
        <li><a href="#anuncios">Anuncios</a></li>
        <li><a href="#eventos">Eventos</a></li>
        <li><a href="#reportes">Reportes</a></li>
        <li><a href="#quejas">Quejas</a></li>
        <li><a href="#emprendimientos">Emprendimientos</a></li>
        <li><a href="#ofertas">Ofertas</a></li>
        <li><a href="#usuarios">Usuarios</a></li>
        <li><a href="/inicio">Volver a Inicio</a></li>
      </ul>
    </aside>

    <!-- Contenido -->
    <main class="admin-content">
      <!-- ===== Resumen ===== -->
      <section id="resumen">
        <h1>Resumen administrativo</h1>
        <%
          const safeArr = a => Array.isArray(a) ? a : [];
          const A   = safeArr(anuncios);
          const E   = safeArr(eventos);
          const R   = safeArr(reportes);
          const Q   = safeArr(quejas);
          const EMP = safeArr(emprendimientos);
          const O   = safeArr(ofertas);
          const U   = safeArr(usuarios);

          const aPend = A.filter(x => x.status === 'pendiente').length;
          const aApr  = A.filter(x => x.status === 'aprobado').length;

          const ePend = E.filter(x => x.status === 'pendiente').length;
          const eApr  = E.filter(x => x.status === 'aprobado').length;

          const repPend = R.filter(x => x.tipo === 'reporte' && x.estado === 'pendiente').length;
          const repApr  = R.filter(x => x.tipo === 'reporte' && x.estado === 'aprobado').length;

          const qjPend  = Q.filter(x => x.estado === 'pendiente').length;
          const qjApr   = Q.filter(x => x.estado === 'aprobado').length;

          // Si un emprendimiento no trae status, lo consideramos pendiente
          const empPend = EMP.filter(x => (x.status || 'pendiente') === 'pendiente').length;
          const empApr  = EMP.filter(x => x.status === 'aprobado').length;

          const ofPend  = O.filter(x => (x.status || 'pendiente') === 'pendiente').length;
          const ofApr   = O.filter(x => x.status === 'aprobado').length;

          const usersCount = U.length;
        %>
        <div class="summary-container">
          <div class="summary-card"><p class="summary-title">Usuarios</p><p class="summary-value"><%= usersCount %></p></div>

          <div class="summary-card"><p class="summary-title">Anuncios aprobados</p><p class="summary-value"><%= aApr %></p></div>
          <div class="summary-card"><p class="summary-title">Anuncios por revisar</p><p class="summary-value"><%= aPend %></p></div>

          <div class="summary-card"><p class="summary-title">Eventos aprobados</p><p class="summary-value"><%= eApr %></p></div>
          <div class="summary-card"><p class="summary-title">Eventos por revisar</p><p class="summary-value"><%= ePend %></p></div>

          <div class="summary-card"><p class="summary-title">Reportes aprobados</p><p class="summary-value"><%= repApr %></p></div>
          <div class="summary-card"><p class="summary-title">Reportes por revisar</p><p class="summary-value"><%= repPend %></p></div>

          <div class="summary-card"><p class="summary-title">Quejas aprobadas</p><p class="summary-value"><%= qjApr %></p></div>
          <div class="summary-card"><p class="summary-title">Quejas por revisar</p><p class="summary-value"><%= qjPend %></p></div>

          <div class="summary-card"><p class="summary-title">Empr. publicados</p><p class="summary-value"><%= empApr %></p></div>
          <div class="summary-card"><p class="summary-title">Empr. por revisar</p><p class="summary-value"><%= empPend %></p></div>

          <div class="summary-card"><p class="summary-title">Ofertas publicadas</p><p class="summary-value"><%= ofApr %></p></div>
          <div class="summary-card"><p class="summary-title">Ofertas por revisar</p><p class="summary-value"><%= ofPend %></p></div>
        </div>
      </section>

      <!-- ===== Anuncios ===== -->
      <section id="anuncios">
        <h2>Gestión de Anuncios</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% A.filter(a => a.status === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="anuncio">
              <h4><%- i.name %></h4>
              <p><%- (i.description || '').slice(0, 120) %><%= (i.description && i.description.length > 120) ? '…' : '' %></p>
              <div class="button-group">
                <form method="post" action="/anuncios/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/anuncios/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicados</h3>
        <div class="card-grid">
          <% A.filter(a => a.status === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.name %></h4>
              <p><%- i.description || '' %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Eventos ===== -->
      <section id="eventos">
        <h2>Gestión de Eventos</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% E.filter(e => e.status === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="evento">
              <h4><%- i.name %></h4>
              <p>Lugar: <%- i.place || '—' %></p>
              <div class="button-group">
                <form method="post" action="/eventos/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/eventos/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicados</h3>
        <div class="card-grid">
          <% E.filter(e => e.status === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.name %></h4>
              <p><%- i.description || '' %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Reportes ===== -->
      <section id="reportes">
        <h2>Gestión de Reportes</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% R.filter(r => r.tipo === 'reporte' && r.estado === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="reporte">
              <h4><%- i.titulo %></h4>
              <p><%- (i.descripcion || '').slice(0,120) %><%= (i.descripcion && i.descripcion.length>120)?'…':'' %></p>
              <div class="button-group">
                <form method="post" action="/reportes/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/reportes/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicados</h3>
        <div class="card-grid">
          <% R.filter(r => r.tipo === 'reporte' && r.estado === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.titulo %></h4>
              <p><%- i.descripcion || '' %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Quejas ===== -->
      <section id="quejas">
        <h2>Gestión de Quejas</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% Q.filter(r => r.estado === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="queja">
              <h4><%- i.titulo %></h4>
              <p><%- (i.descripcion || '').slice(0,120) %><%= (i.descripcion && i.descripcion.length>120)?'…':'' %></p>
              <div class="button-group">
                <form method="post" action="/reportes/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/reportes/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicadas</h3>
        <div class="card-grid">
          <% Q.filter(r => r.estado === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.titulo %></h4>
              <p><%- i.descripcion || '' %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Emprendimientos ===== -->
      <section id="emprendimientos">
        <h2>Gestión de Emprendimientos</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% EMP.filter(x => (x.status || 'pendiente') === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="emprendimiento">
              <h4><%- i.nombreN || i.nombre || 'Emprendimiento' %></h4>
              <p><%- i.descripcion || '' %></p>
              <div class="button-group">
                <form method="post" action="/emprendimientos/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/emprendimientos/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicados</h3>
        <div class="card-grid">
          <% EMP.filter(x => x.status === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.nombreN || i.nombre || 'Emprendimiento' %></h4>
              <p><%- i.descripcion || '' %></p>
              <div class="button-group">
                <form method="post" action="/emprendimientos/<%= i._id %>/rechazar"><button class="rechazar">Eliminar</button></form>
              </div>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Ofertas ===== -->
      <section id="ofertas">
        <h2>Gestión de Ofertas</h2>

        <h3 class="subsection">Por revisar</h3>
        <div class="card-grid">
          <% O.filter(x => (x.status || 'pendiente') === 'pendiente').forEach(i => { %>
            <div class="card" data-id="<%= i._id %>" data-type="oferta">
              <h4><%- i.titulo || 'Oferta' %></h4>
              <p><%- i.negocio || i.emprendimiento || '' %></p>
              <div class="button-group">
                <form method="post" action="/ofertas/<%= i._id %>/aprobar"><button class="aprobar">Aprobar</button></form>
                <form method="post" action="/ofertas/<%= i._id %>/rechazar"><button class="rechazar">Rechazar</button></form>
              </div>
            </div>
          <% }) %>
        </div>

        <h3 class="subsection">Publicadas</h3>
        <div class="card-grid">
          <% O.filter(x => x.status === 'aprobado').forEach(i => { %>
            <div class="card">
              <h4><%- i.titulo || 'Oferta' %></h4>
              <p><%- i.negocio || i.emprendimiento || '' %></p>
              <div class="button-group">
                <form method="post" action="/ofertas/<%= i._id %>/rechazar"><button class="rechazar">Eliminar</button></form>
              </div>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- ===== Usuarios ===== -->
      <section id="usuarios">
        <h2>Gestión de Usuarios</h2>
        <div class="table-container">
          <table class="user-table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Usuario</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Rol</th>
              </tr>
            </thead>
            <tbody>
              <% U.forEach(u => { %>
                <tr>
                  <td><%- u.name %></td>
                  <td><%- u.user %></td>
                  <td><%- u.cellphone %></td>
                  <td><%- u.email %></td>
                  <td><%- u.role %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Modal opcional -->
      <div id="modal-detalles" class="modal" aria-hidden="true">
        <div class="modal-content">
          <button class="close-button" data-close-button>&times;</button>
          <h2>Detalles</h2>
          <p><strong>Título:</strong> <span id="md-titulo"></span></p>
          <p><strong>Descripción:</strong> <span id="md-descripcion"></span></p>
          <p><strong>Adjunto:</strong></p>
          <div class="button-group modal-actions"></div>
          <button class="detalles" id="show-image" style="margin-top:1rem;">Ver imagen</button>
          <img id="modal-image" alt="Archivo adjunto" style="max-width:100%; height:auto; display:none; margin-top:10px;">
        </div>
      </div>
      <div id="overlay"></div>
    </main>
  </div>

  <!-- Footer -->
  <footer class="footer-principal">
    <div class="footer-contenido">
      <div class="footer-info">
        <p><strong>Comunidad Unida</strong></p>
        <p>Flores, Heredia</p>
        <p>Tel: +506 8888-8888</p>
      </div>
      <div class="footer-creditos">
        <p>Diseñado por <strong>W4U</strong></p>
        <a href="/inicio" target="_blank">
          <img src="/img/logo-w4u.png" alt="Logo W4U" class="logo-creador" />
        </a>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script defer src="/js/admin.js"></script>
</body>
</html>
